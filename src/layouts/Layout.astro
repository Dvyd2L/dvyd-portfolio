---
import { i18n } from "@/services/i18n.ts";
import ThemeToggle from "@/components/ThemeToggle.astro";
import SmokeBackground from "@/components/SmokeBackground.astro";

interface Props {
  title: string;
}

const { head } = i18n("en");

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" theme-color="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="author" content={head.author} />
    <meta name="description" content={head.description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="[&_:focus-visible]:outline-none [&_:focus-visible]:ring-2 [&_:focus-visible]:ring-primary"
  >
    <SmokeBackground />
    <ThemeToggle />
    <div
      class="mx-auto max-w-6xl px-2 pt-16 md:pt-20 lg:px-10"
      id="main-content"
    >
      <slot />
    </div>
  </body>
</html>
<style is:global>
  @import url("/public/styles/default.css");
  
  :root {
    --color-primary: #333;
    --color-secondary: #ddd;
    --color-twitch: #9146ff;
    --color-twitch-ice: #f0f0ff;

    --background-color: #bbb;
    --background-twitch: #000;
  }

  [theme-color="dark"] {
    --color-primary: #ddd;
    --color-secondary: #333;

    --background-color: #333;
    --background-twitch: var(--color-twitch-ice);
  }

  html {
    font-family: "Monaspace Krypton", system-ui, sans-serif;
    background: var(--background-color);
    overflow-x: hidden;
    overscroll-behavior: none;
    @media screen and (prefers-reduced-motion: no-preference) {
      scroll-behavior: smooth;
    }
  }

  main {
    position: relative;
  }

  p {
    color: var(--color-primary);
  }
  /* Hiding class, making content visible only to screen readers but not visually */
  /* "sr" meaning "screen-reader" */
  .sr-only:not(:focus):not(:active) {
    clip: rect(0 0 0 0);
    clip-path: inset(50%);
    height: 1px;
    overflow: hidden;
    position: absolute;
    white-space: nowrap;
    width: 1px;
  }

  ::-webkit-scrollbar {
    width: 10px;
    border-radius: 10px;
  }

  ::-webkit-scrollbar-thumb {
    border-radius: 10px;
    background-color: theme("colors.primary");
    border: 2px solid transparent;
    background-clip: content-box;
  }

  ::-webkit-scrollbar-track {
    background: var(--background-image);
  }

  ::-webkit-scrollbar-corner {
    background: var(--background-image);
  }
</style>
